<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/propertyItemImageView"
        android:layout_width="@dimen/list_item_size"
        android:layout_height="@dimen/list_item_size"
        android:contentDescription="@null"
        android:src="@drawable/drag"
        android:padding="4dp" />


    <TextView
        android:id="@+id/propertyItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/propertyItemImageView"
        android:layout_toLeftOf="@+id/propertyItemCheckBox" />


    <CheckBox
        android:id="@+id/propertyItemCheckBox"
        android:layout_width="@dimen/list_item_size"
        android:layout_height="@dimen/list_item_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:checked="false"
        android:elegantTextHeight="false" />
</RelativeLayout>